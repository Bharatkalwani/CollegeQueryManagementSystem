   <div class="container" >
<form  id='myform' method="post" action ="/composeClg">
  <h5>Name</h5>
    <input type="text" class="form-control" name="postName" maxlength="30" placeholder="Enter Name "  required>
  <br>
<h5>Title</h5>
<input type="text" class="form-control" name="postTitle" required ><br>
<h5>Problem</h5>
<textarea  rows="2" cols="50"  class="form-control" name="postContent" required></textarea><br>


<h5>Complain To Whom:</h5>
<select name="teacher" id="">
  <option value="Amit Bohra">Mr.Amit Bohra</option>
  <option value="Nitin Jain">Mr.Nitin Jain</option>
  <option value="Rajesh Rajan">Mr.Rajesh Rajan</option>
  <option value="Giraj Khandewal">Mr.Giraj khandewal</option>
  
</select>
<br>
<br>

<h5>Branch & Section</h5>
<select name="branch" id="">
    <option value="CSE">CSE</option>
    <option value="ME">ME</option>
    <option value="IT">IT</option>
    <option value="CIVIL">CIVIL</option>
    <option value="EE">EE</option>
    <option value="EC">EC</option>
  </select>

<select name="section" id="" style="margin-left: 30px">
    <option value="A">A</option>
    <option value="B">B</option>
    <option value="C">C</option>
    <option value="D">D</option>
  </select>

<br>
<br>
  <input type="radio" name="year" value="1" required>
  <label for="1">1 st Year</label><br>
  <input type="radio" name="year" value="2" required>
  <label for="2">2 nd Year</label><br>
  <input type="radio" name="year" value="3" required>
  <label for="3">3 rd Year</label><br>
  <input type="radio" name="year" value="4" required>
